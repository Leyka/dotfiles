#!/usr/bin/env bash
set -e

if [[ $# -gt 0 ]]; then
  git add .
  git commit -m "$*"
  git push
  exit 0
fi

read -rp "Commit amend and force push? (yY) " ans
if [[ $ans == "y" || $ans == "Y" ]]; then
  git add .
  git commit --amend --reuse-message HEAD
  git push --force-with-lease
else
  echo "Abort"
fi
