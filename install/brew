#!/usr/bin/env bash

# Install homebrew if not already installed
if [ ! -x "$(command -v brew)" ]; then
  /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
  eval "$(/opt/homebrew/bin/brew shellenv)"
fi

brew update && brew upgrade

packages=(
  bat
  coreutils
  eza
  fd
  ffmpeg
  git
  git-lfs
  git-delta
  golang
  gotop
  jordanbaird-ice
  mosh
  nmap
  nvm
  neovim
  pure
  pyenv
  ripgrep
  shellcheck
  stow
  tig
  tldr
  thefuck
  tree
  vim
  yt-dlp
  z
)
brew install "${packages[@]}"

fonts=(
  font-fira-code
  font-cascadia-code
  font-hack-nerd-font
)
brew install "${fonts[@]}"

apps=(
  betterdisplay
  maccy
  netnewswire
  scroll-reverser
  vlc
)
brew install --cask "${apps[@]}"

# Cleanup
brew cleanup
