set encoding=utf-8

" General
syntax on
filetype plugin indent on

" Rules
set number
set ruler
set visualbell
set showmatch
set nocompatible
set showmatch
set autoindent
set smartindent
set smarttab
set shiftwidth=4
set softtabstop=4
set tabstop=4
set mouse=v
set mouse=a
set clipboard=unnamedplus
set cc=80
set ttyfast
set cursorline
set hlsearch
set smartcase
set ignorecase
set incsearch

" Plugins
source $HOME/.config/nvim/vim-plug/plugins.vim